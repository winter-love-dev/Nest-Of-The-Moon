<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 내부 색상 설정 -->
    <solid android:color="#00ffffff" />

    <!-- 테두리 내부 여백 설정 -->
    <padding
        android:left="7dp"
        android:right="7dp"
        android:bottom="4dp"
        android:top="4dp"
        />

    <corners
        android:radius="5dp"
        />

    <!-- 테두리 설정: 두께, 색상 -->
    <stroke
        android:width="1dp"
        android:color="@color/bg_main" />

</shape>
