<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <FrameLayout
            android:layout_gravity="center"
            android:layout_width="115dp"
            android:layout_height="115dp">

        <ImageView
                android:id="@+id/noti_c_tumb"
                android:src="@drawable/logo_1"
                android:layout_width="115dp"
                android:layout_height="115dp" />

        <TextView
                android:visibility="gone"
                android:id="@+id/noti_c_comp"
                android:text="제작 완료"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="#8F000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
            android:layout_weight="1"
            android:paddingHorizontal="7dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/noti_c_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴명"
                android:textColor="@color/bg_main"
                android:textSize="18dp" />

        <TextView
                android:id="@+id/noti_c_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="결제금액"
                android:textColor="@color/black"
                android:textSize="18dp" />

        <TextView
                android:id="@+id/noti_c_serving_noti"
                android:text="상품이 준비중입니다 :)\n'여기'를 클릭하여 더보기"
                android:textSize="10dp"
                android:textColor="@color/bg_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:visibility="gone"
                android:id="@+id/noti_c_serving_time_area"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/noti_c_serving_time"
                        android:text="시간"
                        android:textSize="10dp"
                        android:textColor="@color/bg_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                <TextView
                        android:text="까지 픽업 추천"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/noti_c_serving_impossible_time"
                        android:text="시간"
                        android:textSize="10dp"
                        android:textColor="@color/bg_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                <TextView
                        android:text="이후 제공 불가"
                        android:textSize="10dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/noti_c_order_time"
                android:text="주문한 시간"
                android:textSize="10dp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp">

        <TextView
                android:id="@+id/noti_c_order_serial_number"
                android:text="D13"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:text="주문 번호"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
