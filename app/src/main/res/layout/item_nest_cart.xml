<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <CheckBox
            android:id="@+id/cart_c_check_box"
            android:layout_margin="13dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <ImageView
            android:id="@+id/cart_c_tumb"
            android:src="@drawable/logo_1"
            android:layout_width="115dp"
            android:layout_height="115dp" />

    <LinearLayout
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:paddingHorizontal="7dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/cart_c_way"
                android:text="주문한 시간"
                android:textSize="10dp"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/cart_c_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴명"
                android:textColor="@color/bg_main"
                android:textSize="18dp" />

        <TextView
                android:id="@+id/cart_c_option"
                android:text="옵션1\n옵션2\n옵션3"
                android:textSize="11dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:text="요청사항"
                android:textSize="13dp"
                android:gravity="center"
                android:id="@+id/cart_c_request"
                android:textColor="@color/bg_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/noti_c_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="결제할 금액"
                android:textColor="@color/black"
                android:textSize="18dp" />

    </LinearLayout>


</LinearLayout>
