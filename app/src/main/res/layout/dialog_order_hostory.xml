<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <!--todo: 상단 정보-->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

<!--                <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="13dp"
                        android:orientation="vertical"
                        android:layout_width="55dp"
                        android:layout_height="55dp">-->

                    <!--<TextView-->
                            <!--android:text="전화연결"-->
                            <!--android:textSize="10dp"-->
                            <!--android:layout_marginBottom="10dp"-->
                            <!--android:textColor="@color/bg_main_2"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content" />-->

                <!--</LinearLayout>-->

                <FrameLayout
                        android:layout_width="75dp"
                        android:layout_height="75dp">

                    <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/oht_1_order_anim_4"
                            android:layout_gravity="center"
                            android:layout_width="95dp"
                            android:layout_height="95dp"
                            app:lottie_loop="true" />

                    <!--app:civ_border_width="1dp"-->
                    <!--app:civ_border_color="@color/bg_main"-->
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/oht_1_order_call_button"
                            android:padding="12.5dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="13dp"
                            android:src="@drawable/ic_call_button_2"
                            android:layout_width="55dp"
                            android:layout_height="55dp" />

                </FrameLayout>

                <LinearLayout
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="전화번호: 02-532-6998"
                            android:textSize="12dp"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:layout_marginTop="5dp"
                            android:text="매장위치: 서울 동작구 사당로13길 31"
                            android:textSize="12dp"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    <!--oht_1: order history type 1-->
                    <TextView
                            android:id="@+id/oht_1_order_date_time"
                            android:layout_marginTop="5dp"
                            android:text="주문시간: 00시 00분"
                            android:textSize="12dp"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <!--상단 정보 끝-->

            <View android:layout_width="wrap_content"
                  android:background="@color/bg_main"
                  android:layout_height="0.1dp" />


            <!--todo: 주문 번호-->
            <TextView
                    android:id="@+id/oht_1_order_serial_number"
                    android:text="D13"
                    android:layout_marginTop="70dp"
                    android:textColor="@color/bg_main"
                    android:layout_gravity="center"
                    android:textSize="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <TextView
                    android:text="주문 번호"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <!--todo: 주문 진행중 아이콘-->
            <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="80dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <!--좌측 영역-->
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    <FrameLayout
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp">

                        <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/oht_1_order_anim_1"
                                android:layout_gravity="center"
                                android:layout_width="135dp"
                                android:layout_height="135dp"
                                app:lottie_loop="true" />

                    </FrameLayout>

                    <TextView
                            android:id="@+id/oht_1_order_noti_1"
                            android:text="주문 요청"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/bg_main_2"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>

                <View android:layout_width="40dp"
                      android:layout_height="5dp"
                      android:background="@color/gray3"
                />

                <!--중앙 영역-->
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    <FrameLayout
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp">

                        <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/oht_1_order_anim_2"
                                android:layout_marginTop="15dp"
                                android:layout_gravity="center"
                                android:layout_width="400dp"
                                android:layout_height="400dp"
                                app:lottie_loop="true" />

                    </FrameLayout>

                    <TextView
                            android:text="제작중"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/gray"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:id="@+id/oht_1_order_noti_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>

                <View android:layout_width="40dp"
                      android:layout_height="5dp"
                      android:background="@color/gray3"
                />

                <!--우측 영역-->
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <FrameLayout
                            android:layout_gravity="center"
                            android:layout_width="100dp"
                            android:layout_height="100dp">

                        <com.airbnb.lottie.LottieAnimationView
                                android:id="@+id/oht_1_order_anim_3"
                                android:layout_gravity="center"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                app:lottie_loop="true" />

                    </FrameLayout>

                    <TextView
                            android:text="제작 완료"
                            android:id="@+id/oht_1_order_noti_3"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/gray"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <!--주문 진행중 아이콘 끝-->

            <TextView
                    android:layout_marginTop="50dp"
                    android:text="주문을 요청했습니다"
                    android:id="@+id/oht_1_order_noti_message"
                    android:textColor="@color/bg_main"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/oht_1_order_pick_up_noti_area"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_marginTop="80dp"
                        android:layout_marginHorizontal="7dp"
                        android:text="픽업 추천시간 안내"
                        android:textSize="10dp"
                        android:textColor="@color/bg_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:layout_marginLeft="15dp"
                            android:gravity="center"
                            android:text="음료 완성 후 "
                            android:textSize="20dp" />

                    <TextView
                            android:id="@+id/oht_1_order_pick_up_recommend_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="Noti"
                            android:textColor="@color/bg_main"
                            android:textSize="20dp" />

                    <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="안에 픽업하면"
                            android:textSize="20dp" />

                </LinearLayout>

                <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="맛있게 드실 수 있습니다 :)"
                        android:textSize="20dp" />

                <TextView
                        android:layout_marginTop="30dp"
                        android:layout_marginHorizontal="7dp"
                        android:text="픽업 불가능한 시간 안내 (환불 불가)"
                        android:textSize="10dp"
                        android:textColor="@color/bg_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/oht_1_order_pick_up_serving_impossible_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="Noti"
                            android:textColor="@color/bg_main"
                            android:textSize="18dp" />

                    <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="안에 픽업하지 않으면"
                            android:textSize="20dp" />

                </LinearLayout>

                <TextView
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="60dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="음료가 식어서 제공할 수 없습니다 :("
                        android:textSize="20dp" />

            </LinearLayout>

            <TextView
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/oht_1_order_pick_up_order_count"
                    android:text="주문 내역 (n건)"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/oht_1_order_recycler_view"
                    android:overScrollMode="never"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/oht_1_total_price"
                    android:text="총 00원"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <LinearLayout
                    android:layout_marginVertical="50dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:overScrollMode="never"
                        android:layout_margin="15dp"
                        android:src="@drawable/logo_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:text="Thank you for using"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:text="Nest Of The Moon"
                            android:textColor="@color/bg_main"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

