<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="400dp"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/dialog_menu_detail_thumb"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp" />

            <ScrollView
                    android:background="#86000000"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:layout_marginTop="30dp"
                            android:layout_marginHorizontal="7dp"
                            android:text="상품명"
                            android:textSize="10dp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    <TextView
                            android:id="@+id/dialog_menu_detail_name"
                            android:layout_marginBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="7dp"
                            android:gravity="center_vertical"
                            android:text="Name"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    <TextView
                            android:layout_marginHorizontal="7dp"
                            android:text="상품 금액"
                            android:textSize="10dp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    <TextView
                            android:id="@+id/dialog_menu_detail_price"
                            android:layout_marginBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="7dp"
                            android:gravity="center_vertical"
                            android:text="Price"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    <TextView
                            android:id="@+id/dialog_menu_detail_serving_size_noti"
                            android:layout_marginHorizontal="7dp"
                            android:text="1회 제공 용량"
                            android:textSize="10dp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:id="@+id/dialog_menu_detail_serving_size"
                            android:layout_marginBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="7dp"
                            android:gravity="center_vertical"
                            android:text="ml or g"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    <TextView
                            android:layout_marginHorizontal="7dp"
                            android:text="상품 소개"
                            android:textSize="10dp"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    <TextView
                            android:id="@+id/dialog_menu_detail_produce"
                            android:layout_marginBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="7dp"
                            android:gravity="center_vertical"
                            android:text="Produce"
                            android:textColor="@color/white"
                            android:textSize="18dp" />

                    <View
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginBottom="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/white" />

                    <TextView
                            android:layout_marginBottom="70dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="7dp"
                            android:gravity="center"
                            android:text="↓ 주문 옵션 선택 (아래로 스와이프)"
                            android:textColor="@color/white"
                            android:textSize="20dp" />


                <LinearLayout
                        android:background="@drawable/item_gradient_1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="25dp">

                </LinearLayout>

                    <LinearLayout
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/create_menu_title"
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="주문"
                                android:textColor="@color/bg_main"
                                android:textSize="20dp"/>

                        <TextView
                                android:layout_marginTop="15dp"
                                android:layout_marginHorizontal="7dp"
                                android:text="HOT / ICE 선택"
                                android:textSize="10dp"
                                android:textColor="@color/bg_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        <Spinner
                                android:id="@+id/dialog_menu_detail_hot_and_ice"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginHorizontal="15dp"
                                android:background="@drawable/item_edit_text_3"
                                android:layout_height="35dp"
                                android:layout_width="match_parent"
                                android:textSize="18dp"
                                android:hint="선택" />


                        <TextView
                                android:layout_marginTop="15dp"
                                android:layout_marginHorizontal="7dp"
                                android:text="주문 옵션"
                                android:textSize="10dp"
                                android:textColor="@color/bg_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        <Spinner
                                android:id="@+id/dialog_menu_detail_order_option"
                                android:layout_marginTop="4dp"
                                android:layout_marginHorizontal="15dp"
                                android:background="@drawable/item_edit_text_3"
                                android:layout_height="35dp"
                                android:layout_width="match_parent"
                                android:textSize="18dp"
                                android:hint="선택" />

                        <LinearLayout
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="15dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/dialog_menu_detail_order_option_list"
                                    android:layout_marginHorizontal="7dp"
                                    android:text="옵션"
                                    android:textSize="15dp"
                                    android:textColor="@color/bg_main"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            <TextView
                                    android:id="@+id/dialog_menu_detail_order_option_total_price"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginHorizontal="7dp"
                                    android:text="총 결제 금액: "
                                    android:textSize="15dp"
                                    android:textColor="@color/bg_main"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                        </LinearLayout>

                        <TextView
                                android:layout_marginTop="15dp"
                                android:layout_marginHorizontal="7dp"
                                android:text="요청 사항"
                                android:textSize="10dp"
                                android:textColor="@color/bg_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        <Spinner
                                android:id="@+id/dialog_menu_detail_spinner"
                                android:layout_marginTop="4dp"
                                android:layout_marginHorizontal="15dp"
                                android:background="@drawable/item_edit_text_3"
                                android:layout_height="35dp"
                                android:layout_width="match_parent"
                                android:textSize="18dp"
                                android:hint="선택" />

                        <EditText
                                android:id="@+id/dialog_menu_detail_option_request"
                                android:visibility="gone"
                                android:paddingHorizontal="7dp"
                                android:textSize="18dp"
                                android:textColor="@color/black"
                                android:layout_marginTop="4dp"
                                android:layout_marginHorizontal="7dp"
                                android:background="@drawable/item_edit_text_3"
                                android:inputType="textPersonName"
                                android:layout_width="match_parent"
                                android:layout_height="35dp" />


                        <TextView
                                android:layout_marginTop="30dp"
                                android:layout_marginHorizontal="7dp"
                                android:text="픽업 추천시간 안내"
                                android:textSize="10dp"
                                android:textColor="@color/bg_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/black"
                                    android:layout_marginLeft="15dp"
                                    android:gravity="center"
                                    android:text="음료 완성 후 "
                                    android:textSize="20dp" />

                            <TextView
                                    android:id="@+id/dialog_menu_detail_pick_up_recommend_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Noti"
                                    android:textColor="@color/bg_main"
                                    android:textSize="20dp" />

                            <!--<EditText-->
                            <!--android:id="@+id/create_menu_pick_up_recommend_time"-->
                            <!--android:layout_width="80dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:gravity="center"-->
                            <!--android:hint="입력"-->
                            <!--android:inputType="number"-->
                            <!--android:textColor="@color/gray"-->
                            <!--android:textSize="20dp" />-->

                            <TextView
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="안에 픽업하면"
                                    android:textSize="20dp" />

                        </LinearLayout>

                        <TextView
                                android:layout_marginLeft="15dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="맛있게 드실 수 있습니다 :)"
                                android:textSize="20dp" />

                        <TextView
                                android:layout_marginTop="30dp"
                                android:layout_marginHorizontal="7dp"
                                android:text="픽업 불가능한 시간 안내 (환불 불가)"
                                android:textSize="10dp"
                                android:textColor="@color/bg_main"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/dialog_menu_detail_serving_impossible_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:gravity="center_vertical"
                                    android:text="Noti"
                                    android:textColor="@color/bg_main"
                                    android:textSize="18dp" />

                            <TextView
                                    android:textColor="@color/black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="안에 픽업하지 않으면"
                                    android:textSize="20dp" />

                        </LinearLayout>

                        <TextView
                                android:layout_marginLeft="15dp"
                                android:layout_marginBottom="60dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:textColor="@color/black"
                                android:gravity="center"
                                android:text="음료가 식어서 제공할 수 없습니다 :("
                                android:textSize="20dp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <WebView
                    android:visibility="gone"
                    android:id="@+id/dialog_menu_detail_webview"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_weight="1" />

            <TextView
                    android:visibility="gone"
                    android:id="@+id/dialog_menu_detail_payment_complete"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="결제한 메뉴가\n\n바리스타에게 전달 되었습니다 :)\n\n해당상품의 진행 상황을\n\n세 번 째 탭 혹은\n\n아래 버튼을 눌러서 확인하세요"
                    android:textSize="20dp" />

        </FrameLayout>


        <LinearLayout
                android:id="@+id/dialog_menu_detail_bottom_button_area"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/dialog_menu_detail_add_cart"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="장바구니"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            <TextView
                    android:id="@+id/dialog_menu_detail_order_now"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_main"
                    android:gravity="center"
                    android:padding="13dp"
                    android:text="주문하기"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

        </LinearLayout>

        <TextView
                android:visibility="gone"
                android:id="@+id/dialog_menu_detail_order_detail_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_main"
                android:gravity="center"
                android:padding="13dp"
                android:text="확인하기"
                android:textColor="@color/white"
                android:textSize="16dp" />

    </LinearLayout>

</FrameLayout>
